	option 'port' '2009'
	option 'bindto' '0.0.0.0'

config interface
	option 'ifname' 'loopback'

config interface
	list 'ifname' 'testbed'
	list 'ifname' 'testbed_virtual'


config remotecontrol
	option 'acl'	'default_accept'
